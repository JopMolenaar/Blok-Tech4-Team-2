<body class="background-image">
    <h1>Welkom bij /sitenaam/</h1>
    <h2>Login om verder te gaan</h2>

    <form action="/login" method="POST">
        <div>
            <label for="username">Gebruikersnaam:</label>
            <input type="tekst" id="gebruikersnaam" name="username" required>
        </div>

        <div>
            <label for="password">Wachtwoord:</label>
            <input type="password" id="wachtwoord" name="password" required>
            {{#if error}}
                <p class="error-message">{{error}}</p>
            {{/if}}
        </div>

        <div>
            <button type="submit">Login</button>
        </div>

        <h4>Of</h4>
        <a href="/signUp" class="formButton" type="submit">Maak een account</a>
    </form>
</body>