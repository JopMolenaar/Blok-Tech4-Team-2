<header>
    <img src="images/favicon.ico" alt="" loading="lazy" />
    <nav>
        <a href="/products">Producten</a>
        <a href="/voorkeuren">Voorkeuren</a>
        <a href="/wishlist">Wishlist</a>
        <form id="logout" action="/logout" method="POST">
            <button type="submit">Uitloggen</button>
        </form>
    </nav>
</header>

<h2 id="h2wish">Jouw Wishlist</h2>
<ul>
  <div class="wishlist">
    {{#each wishlist}}
      <div class="list-item">
        <div>
          <img src="/upload/{{this.img}}" alt="Picture" />
        </div>
        <div>
          <h3>{{this.naam}}</h3>
          <p>Soort: {{this.soort}}</p>
          <p>Leeftijd: {{this.leeftijd}}</p>
        </div>
        <form action="/wishlist-delete/{{this._id}}" method="post">
          <button type="submit" class="submitButton">Delete from wishlist</button>
        </form>
      </div>
    {{/each}}
  </div>
</ul>
<a id="terugwish" href="/products">Terug</a>