<header>
    <section>
    </section>
    <nav>
        <form id="logout" action="/logout" method="POST">
            <button type="submit">Logout</button>
        </form>
        <a href="/wishlist">My wishlist</a>
    </nav>
</header>

<main id="productpage">
    <section>
        <h1>Ons aanbod</h1>
    </section>
    <ul>
        {{#each product}}
            <li
                class="{{this.eigenschappen.activiteit}}
                    {{this.eigenschappen.leefstijl}}
                    {{this.eigenschappen.grootte}}
                    {{this.eigenschappen.activiteit}}
                    {{this.soort}}
                    {{this.leeftijd}}"
            >
                <a href="/producten-overzicht/detail/{{this._id}}">
                    <div>
                        <img src="/upload/{{this.img}}" alt="Picture" />
                    </div>
                    <section>
                        <h3 class="visually-hidden">Gegevens:</h3>
                        <p><b>Naam:</b> {{this.naam}}</p>
                        <p><b>Leeftijd:</b> {{this.leeftijd}}</p>
                        <p><b>Soort:</b> {{this.soort}}</p>
                        <p><b>Beschrijving:</b> {{this.beschrijving}}</p>
                    </section>

                    <section>
                        <h4 class="visually-hidden">Eigenschappen:</h4>
                        <p><b>Activiteit:</b> {{this.eigenschappen.activiteit}}</p>
                        <p><b>Leefomgeving:</b> {{this.eigenschappen.leefstijl}}</p>
                        <p><b>Grootte:</b> {{this.eigenschappen.grootte}}</p>
                        <p><b>Dag of nacht dieren:</b> {{this.eigenschappen.dag}}</p>
                    </section>
                </a>
            </li>
        {{/each}}
    </ul>
    <section>
        <h2>Filter products</h2>
        <p id="javascriptOff">Turn on Javascript to use the filter function</p>

        <section>
            <h3>Leeftijd range</h3>
            <section class="price-input">
                <label>
                    Min
                    <input type="number" class="input-min" value="0" />
                </label>
                <span>-</span>
                <label>
                    Max
                    <input type="number" class="input-max" value="99" />
                </label>
            </section>
            <div class="slider">
                <div class="progress"></div>
            </div>
            <div class="range-input">
                <input type="range" class="range-min" min="0" max="100" value="0" />
                <input type="range" class="range-max" min="0" max="100" value="100" />
            </div>
        </section>
        <section class="soort">
            <h3>Soort</h3>
            {{#each product}}
                <label>
                    <input type="checkbox" name="soort" value="{{this.soort}}" />
                    {{this.soort}}
                </label>
            {{/each}}
        </section>

        <section>
            <h3>Activiteit</h3>
            <label for="">
                <input type="radio" name="activiteit" value="actief" />
                Actief
            </label>
            <label for="">
                <input type="radio" name="activiteit" value="rustig" />
                Rustig
            </label>
        </section>

        <section>
            <h3>Leefstijl</h3>
            <label for="">
                <input type="radio" name="leefstijl" value="binnen" />
                Binnen
            </label>
            <label for="">
                <input type="radio" name="leefstijl" value="buiten" />
                Buiten
            </label>
            <label for="">
                <input type="radio" name="leefstijl" value="beiden" />
                Beiden
            </label>
        </section>

        <section>
            <h3>Grootte</h3>
            <label for="">
                <input type="radio" name="grootte" value="klein" />
                Klein
            </label>
            <label for="">
                <input type="radio" name="grootte" value="middel" />
                Middel
            </label>
            <label for="">
                <input type="radio" name="grootte" value="groot" />
                Groot
            </label>
        </section>
        <section>
            <h3>Dag of s'nachts</h3>
            <label for="">
                <input type="radio" name="dagnacht" value="dag" />
                Overdag
            </label>
            <label for="">
                <input type="radio" name="dagnacht" value="nacht" />
                S'nachts
            </label>
        </section>
    </section>
</main>

<script src="/js/filter.js"></script>