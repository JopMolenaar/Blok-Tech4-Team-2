<header>
  <section>
  </section>
  <nav>
    <form id="logout" action="/logout" method="POST">
      <button type="submit">Logout</button>
    </form>
  </nav>
</header>

<main id="productpage">
  <section>
    <h1>Ons aanbod</h1>
  </section>
  <ul>
    {{#each product}}
      <li>
        <a href="/producten-overzicht/detail/{{this._id}}">
          <div>
            <img src="/upload/{{this.img}}" alt="Picture" />
          </div>
          <section>
            <h3 class="visually-hidden">Gegevens:</h3>
            <p><b>Naam:</b> {{naam}}</p>
            <p><b>Leeftijd:</b> {{leeftijd}}</p>
            <p><b>Soort:</b> {{this.soort}}</p>
            <p><b>Beschrijving:</b> {{this.beschrijving}}</p>
          </section>
          {{#productInfo}}{{/productInfo}}

          <section>
            <h4 class="visually-hidden">Eigenschappen:</h4>
            <p><b>Activiteit:</b> {{this.eigenschappen.activiteit}}</p>
            <p><b>Leefomgeving:</b> {{this.eigenschappen.leefstijl}}</p>
            <p><b>Grootte:</b> {{this.eigenschappen.grootte}}</p>
            <p><b>Dag of nacht dieren:</b> {{this.eigenschappen.dag}}</p>
          </section>
        </a>
      </li>

    {{/each}}
  </ul>
  <section>

    <h2>Filter products</h2>
    {{! <p id="javascriptOff">Turn on Javascript to use the filter function</p> }}
  </section>
  <!-- HTML-structuur voor productenpagina -->
  <h1>Productenpagina</h1>
  <ul id="product-list"></ul>

  <!-- Inlogformulier -->
  <form id="login-form">
    <input type="text" id="username" placeholder="Gebruikersnaam" required />
    <input type="password" id="password" placeholder="Wachtwoord" required />
    <button type="submit">Inloggen</button>
  </form>
</main>

<script src="/js/filter.js"></script>