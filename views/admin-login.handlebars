<html>
<head>
    <title>Admin Login</title>
</head>
<body class="background-image">
    <main>
        <form id="adminForm" action="/admin-login" method="POST">
            <h1 class="loginH">Welkom Admin</h1>
                {{#if error}}
                    <p class="error-message">{{error}}</p>
                {{/if}}
            <fieldset>
                <label for="gebruikersnaam">Gebruikersnaam:</label>
                <input type="username" id="adminGebruikersnaam" name="gebruikersnaam" required/>
            </fieldset>
            
            <fieldset>
                <label for="wachtwoord">Wachtwoord:</label>
                <input type="password" id="adminWachtwoord" name="wachtwoord" required/>
            </fieldset>

            <button class="formButton" type="submit">Login</button>
            
        </form>
    </main>
    <script src="/js/gulp-js/admin-login.js"></script>
</body>
</html>