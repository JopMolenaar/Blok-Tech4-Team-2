<header>
    <img src="images/favicon.ico" alt="" />
    <nav>
        <a href="/producten-overzicht/toevoegen">Product toevoegen</a>
        <form id="logout" action="/admin-logout" method="POST">
            <button type="submit">Logout</button>
        </form>
    </nav>
</header>

<main id="productPageAdmin">
    <div>
        <section>
            <input id="searchAnimals" type="text" name="search" placeholder="Zoek dieren" />
        </section>
        <section>
            {{#each product}}
                <ul>
                    <li><img src="/upload/{{this.img}}" alt="Picture" /></li>
                    <li>{{this.naam}}</li>
                    <li>{{this.soort}}</li>
                    <li><a href="/producten-overzicht/aanpassen/{{this._id}}">Change</a></li>
                </ul>
            {{/each}}
        </section>
    </div>
    <script src="/js/admin-search.js"></script>

</main>