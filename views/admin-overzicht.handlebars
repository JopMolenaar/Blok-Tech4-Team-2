{{> admin-header}}

<main id="productPageAdmin">
    <div>
        <section>
            <input id="searchAnimals" type="text" name="search" placeholder="Zoek dieren" />
        </section>
        <section id="animalsList">
            {{#each product}}
                <ul>
                    <li><img src="/upload/{{this.img}}" alt="Picture" /></li>
                    <li>{{this.naam}}</li>
                    <li>{{this.soort}}</li>
                    <li><a href="/producten-overzicht/aanpassen/{{this._id}}"><img class="icon" src="../images/icons8-edit.svg"></a></li>
                    <li><button id="delBtn"><img class="icon" src="../images/icons8-delete.svg"></button></li>
                </ul>
            {{/each}}
        </section>
    </div>
    <script src="/js/gulp-js/admin-search.js"></script>

</main>